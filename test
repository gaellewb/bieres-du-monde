   // Récupération du dernier ID inséré automatiquement

    $result = getPDO()->query("SELECT MAX(ID_ARTICLE) FROM article");



    // Incrémentation de l'ID pour obtenir l'ID suivant

    $row = $result->fetch(PDO::FETCH_NUM);



    $id = $row[0] + 1;

